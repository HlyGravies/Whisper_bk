<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WhisperActivity">

    <TextView
        android:id="@+id/wisperText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whisper"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>

    <EditText
        android:id="@+id/wisperEdit"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittextshape"
        android:text="Whisper Text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/wisperText"
        app:layout_constraintStart_toStartOf="@+id/wisperText"
        app:layout_constraintTop_toBottomOf="@+id/wisperText" />

    <Button
        android:id="@+id/wisperButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/blue"
        android:text="Whisper"
        app:layout_constraintEnd_toEndOf="@+id/wisperEdit"
        app:layout_constraintStart_toStartOf="@+id/wisperEdit"
        app:layout_constraintTop_toBottomOf="@+id/wisperEdit" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/blue"
        android:text="Cancel"
        app:layout_constraintEnd_toEndOf="@+id/wisperButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/wisperButton"
        app:layout_constraintTop_toBottomOf="@+id/wisperButton" />

</androidx.constraintlayout.widget.ConstraintLayout>